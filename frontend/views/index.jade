extend layout

block navigation
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation', ng-controller='NavigationController')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') RIBS
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li(ng-class="{ active: isActive('/')}")
              a(href='/') Home
            li(ng-class="{ active: isActive('/customers')}")
              a(href='/customers') Customers
            li(ng-class="{ active: isActive('/parts')}")
              a(href='/parts') Parts
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Dropdown
                b.caret
              ul.dropdown-menu
                li
                  a(href='#') Action
                li
                  a(href='#') Another action
                li
                  a(href='#') Something else here
                li.divider
                li.dropdown-header Nav header
                li
                  a(href='#') Separated link
                li
                  a(href='#') One more separated link
          ul.nav.navbar-nav.navbar-right
            form.navbar-form
            .input-group
                input(type='text', placeholder='Search...').form-control

block main-content
    .container
        div(ng-view)

append bottom-script
    script(src='bower_modules/angular/angular.min.js')
    script(src='bower_modules/angular-route/angular-route.min.js')
    script(src='ribs.min.js')
